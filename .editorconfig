; http://editorconfig.org

root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,jsx,ts,tsx,css}]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
indent_size = 2
indent_style = space

[*.yml]
indent_size = 2
indent_style = space

[*.dot]
indent_size = 2
indent_style = space

[node_modules/**.js]
codepaint = false
